<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.javapapers.androidchartapp.MainActivity"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:text="View your logbook through graphs!" />

        <Button
            android:id="@+id/btngraphTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Severity vs Date" />

        <Button
            android:id="@+id/btngraphHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Severity vs Humidity" />

        <Button
            android:id="@+id/btngraphTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Severity vs Temperature" />

        <Button
            android:id="@+id/btngraphPollen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Severity vs Pollen level" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>